<div class="row">
  <aside class="col-xs-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @user.name %>
        </h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-xs-8">
    <% if @tasks.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>タスク</th>
            <th>状態</th>
            <th>詳細</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
  
          <% @tasks.each do |task| %> 
            <tr>
              <td><%= task.id %></td>
              <td><%= task.content %></td>
              <td><%= task.status %></td>
              <td><%= link_to '詳細', task, class: 'btn btn-info btn-xs' %></td>
              <td><%= link_to '編集する', edit_task_path, class: 'btn btn-default btn-xs' %></td>
              <td><%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>