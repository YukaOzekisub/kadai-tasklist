<div class="row">
  <aside class="col-xs-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= @user.name %>
        </h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="form-group">
    <div class="col-xs-8">
      <% if @tasks.empty? %>
              まだタスクがありません
      <% else %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>id</th>
              <th>タスク</th>
              <th>状態</th>
              <th>詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %> 
              <tr>
                <td><%= task.id %></td>
                <td><%= task.content %></td>
                <td><%= task.status %></td>
                <td><%= link_to '詳細', task, class: 'btn btn-info btn-xs' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class="col-xs-8">
    <%= link_to '新規タスクの作成', new_task_path, class: 'btn btn-info' %>
  </div>
</div>