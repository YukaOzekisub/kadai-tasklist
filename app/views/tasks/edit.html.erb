<h2>
  <%= "id = #{@task.id} のタスク編集ページ" %>
</h2>

<%= form_for(@task) do |f| %>
  <%= f.label :content, 'Taskの内容'%>
  <br />
  <%= f.text_field :content %>
  <br />
  <%= f.label :status, 'Taskの状況' %>
  <br />
  <%= f.text_field :status %>
  <br />
  <%= f.submit '投稿' %>
<% end %>
<%= link_to '一覧に戻る', tasks_path %>
