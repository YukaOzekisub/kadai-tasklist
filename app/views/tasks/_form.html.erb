<div class="row">
    <%= form_for(task) do |f| %>
      
      <% if task.errors.any? %>
        <div class="alert alert-warning", id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
      <div class="form-group">
        <div class="col-sm-offset-2 col-lg-offset-3">
          <%= f.label :content, 'タスクの内容'%>
          <br />
          <div class="col-xs-12 col-sm-8 col-lg-6">
            <%= f.text_field :content, class: 'form-control' %>
          </div>
        </div>
      </div>
      
      <br />
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-lg-offset-3">
          <%= f.label :status, 'タスクの状況' %>
          <br />
          <div class="col-xs-12 col-sm-8 col-lg-6">
            <%= f.text_field :status, class: 'form-control' %>
          </div>
        </div>
      </div>
  
     <div class="form-group">
        <div class="col-sm-offset-2 col-lg-offset-3">
          <div class="col-xs-12 col-sm-8 col-lg-6">
            <%= f.submit '投稿', class: 'btn btn-promary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>