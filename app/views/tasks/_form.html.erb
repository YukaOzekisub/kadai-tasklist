<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'Taskの内容'%>
  <br />
  <%= f.text_field :content %>
  <br />
  <%= f.label :status, 'Taskの状況' %>
  <br />
  <%= f.text_field :status %>
  <br />
  <%= f.submit '投稿' %>
<% end %>