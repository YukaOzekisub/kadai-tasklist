<h2>タスク一覧</h2>
<% if @tasks.any? %>
 <table class="table table-striped">
    <thead>
      <tr>
        <th>ユーザid</th>
        <th>ユーザ名</th>
        <th>タスクid</th>
        <th>タスク</th>
        <th>状態</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %> 
        <tr>
          <td><%= task.user.id %></td>
          <td><%= task.user.name %></td>
          <td><%= task.id %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>