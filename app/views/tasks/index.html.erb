<h2>タスク一覧</h2>
<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスクの内容</th>
        <th>タスクの状態</th>
      </tr>
    </thead>
    <tbody>
  
      <% @tasks.each do |task| %> 
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>